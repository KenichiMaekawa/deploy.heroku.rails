- model_class = Hoge
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @hoge.name
%p
  %strong= model_class.human_attribute_name(:age) + ':'
  %br
  = @hoge.age


= link_to t('.back', :default => t("helpers.links.back")), hoges_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_hoge_path(@hoge), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), hoge_path(@hoge), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
