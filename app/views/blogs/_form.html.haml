= simple_form_for @blog, :html => { :class => 'form-horizontal' } do |f|
  = f.input :title
  = error_span(@blog[:title])
  = f.input :content
  = error_span(@blog[:content])
  = f.input :regist_date, as: :datetime_picker
  = error_span(@blog[:regist_date])
  = f.button :submit, :class => 'btn-primary'
  = link_to t('.cancel', :default => t("helpers.links.cancel")), |
    blogs_path, :class => 'btn btn-default'                      |
